<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:minWidth="48dp">

    <Button
            android:text="CLR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnClr"
            android:minWidth="48dp"
            tools:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/buttonDivide" android:layout_marginStart="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnNeg"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/result" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:focusableInTouchMode="false"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/operation" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/newNumber" android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif" android:textSize="18sp"
            android:inputType="numberSigned|numberDecimal" app:layout_constraintBaseline_toBaselineOf="@+id/newNumber"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/newNumber" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            android:minWidth="48dp"
            app:layout_constraintStart_toStartOf="@+id/button1"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
    />
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:minWidth="48dp"
            app:layout_constraintStart_toStartOf="@+id/button4"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2"
    />
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3"
            app:layout_constraintStart_toStartOf="@+id/button5"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:minWidth="48dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            app:layout_constraintStart_toStartOf="@+id/button6"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:minWidth="48dp"
            app:layout_constraintStart_toStartOf="@+id/button7"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5"
    />
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            app:layout_constraintStart_toStartOf="@+id/button8"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:minWidth="48dp"
            app:layout_constraintTop_toBottomOf="@+id/button9"
            app:layout_constraintStart_toStartOf="@+id/button9"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button8"
            app:layout_constraintEnd_toStartOf="@+id/button8"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9"
            app:layout_constraintEnd_toStartOf="@+id/button9"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:minWidth="48dp"
            app:layout_constraintTop_toBottomOf="@+id/newNumber"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivide"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button9"/>
    <Button
            android:text="Neg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNeg"
            android:minWidth="48dp"
            tools:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDivide"
            app:layout_constraintStart_toEndOf="@+id/buttonDivide"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMultiply"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            app:layout_constraintStart_toStartOf="@+id/buttonDivide"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus"
            tools:minWidth="48dp" android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3"
            app:layout_constraintStart_toStartOf="@+id/buttonMultiply"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
            app:layout_constraintStart_toStartOf="@+id/buttonMinus"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDot"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
            app:layout_constraintStart_toStartOf="@+id/button2"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEquals"
            android:minWidth="48dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintStart_toStartOf="@+id/button3"/>
</android.support.constraint.ConstraintLayout>