<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Constraint Layout"
            android:layout_width="110dp"
            android:layout_height="19dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:id="@+id/textView"/>
    <EditText
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/button4"
            android:scrollbars="horizontal|vertical" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_width="0dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="OK"
            android:layout_width="114dp"
            android:layout_height="0dp"
            android:id="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/button4"
            android:layout_marginEnd="16dp" app:layout_constraintBaseline_toBaselineOf="@+id/button4"/>
    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/button4" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent" android:verticalScrollbarPosition="right"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ball_100x100"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/editText" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
</android.support.constraint.ConstraintLayout>